<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ViewStudent</servlet-name>
        <servlet-class>com.student.servlet.ViewStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStudentController</servlet-name>
        <servlet-class>com.student.servlet.UpdateStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentEditForm</servlet-name>
        <servlet-class>com.student.servlet.StudentEditForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentAddController</servlet-name>
        <servlet-class>com.student.servlet.StudentAddController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.student.servlet.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogInController</servlet-name>
        <servlet-class>com.student.servlet.LogInController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewStudent</servlet-name>
        <url-pattern>/ViewStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStudentController</servlet-name>
        <url-pattern>/UpdateStudentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentEditForm</servlet-name>
        <url-pattern>/StudentEditForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentAddController</servlet-name>
        <url-pattern>/StudentAddController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogInController</servlet-name>
        <url-pattern>/LogInController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
